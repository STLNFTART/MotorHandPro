# LAM API Configuration
LAM_API_URL=http://host.docker.internal:8000
LAM_API_KEY=optional_api_key_here

# MQTT Broker
MQTT_BROKER=mqtt://mosquitto:1883
MQTT_USERNAME=nodered
MQTT_PASSWORD=secure_password_here

# TimescaleDB
TIMESCALE_PASSWORD=changeme_timescale_password

# Grafana
GRAFANA_PASSWORD=admin

# Notifications - Email
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=alerts@example.com
EMAIL_PASSWORD=app_specific_password

# Notifications - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notifications - PagerDuty
PAGERDUTY_INTEGRATION_KEY=your_integration_key_here

# GitHub Integration
GITHUB_TOKEN=ghp_your_token_here
GITHUB_REPO=STLNFTART/MotorHandPro

# TAK Server (optional)
TAK_SERVER_URL=https://tak.example.com:8443
TAK_CERT_PATH=/certs/tak-client.p12
TAK_CERT_PASSWORD=cert_password

# InfluxDB (if using instead of TimescaleDB)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your_influx_token
INFLUXDB_ORG=motorhand
INFLUXDB_BUCKET=telemetry

# Redis (for distributed caching - optional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_password

# Security
NODE_RED_CREDENTIAL_SECRET=long_random_string_for_credential_encryption

# Node-RED User Authentication (bcrypt hashed)
# Generate with: node -e "console.log(require('bcryptjs').hashSync('your-password', 8))"
NODE_RED_ADMIN_PASSWORD_HASH=$2b$08$hashed_password_here
